<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Prediction" Height="450" Width="800">
    <Grid>
        <!-- Кнопка для тренировки и предсказания -->
        <Button Name="TrainAndPredictButton" Content="Виконати прогноз" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Click="TrainAndPredictButton_Click"/>

        <!-- Кнопка для сохранения результатов в JSON -->
        <Button Name="SaveToJsonButton" Content="Зберегти у JSON" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,10,0,0" Click="SaveToJsonButton_Click"/>

        <!-- Текстовое поле для отображения результатов -->
        <TextBox Name="ResultsTextBox" Margin="0,304,10,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
        <ListBox Name="lstPredictions" HorizontalAlignment="Center" Height="249" VerticalAlignment="Top" Width="780" Margin="0,50,0,0"/>
    </Grid>
</Window>

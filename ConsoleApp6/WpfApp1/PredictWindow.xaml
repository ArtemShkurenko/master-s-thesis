<Window x:Class="WpfApp1.PredictWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Прогнозування чисельності" Height="450" Width="800">
    <Grid>
        <Button Content="Повернутися" Width="150" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" Click="BackToMainWindowButton_Click" Margin="0,369,0,0"/>
        <Button Name="LoadTestDataButton" Content="Завантажити дані" 
                Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"
                Click="LoadTestDataButton_Click"/>
        <Button Name="PredictButton" Content="Виконати прогноз" 
                Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,10,0,0"
                Click="PredictButton_Click"/>
        <TextBox Name="ResultsTextBox" Margin="10,55,10,70" 
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
